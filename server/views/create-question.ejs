<link rel="stylesheet" type="text/css" href="/css/create.css" />
<div class="container">
  <div class="header">
    <div class="links">
      <a href="/questions" class="link1">Questions</a>
      <a class="link2">Themes</a>
      <a class="link3">Users</a>
      <form action="/logout?_method=DELETE" method="POST">
        <button class="logout" type="submit">Log Out</button>
    </form>
    </div>
  </div>

  <div class="content">
    <form action="/questions" method="POST">
      <div class="questionContent">
        <label name="question_content">Question content</label>
        <input name="question_content" autocomplete="off" type="text">
      </div>

      <div class="correctAnswer">
        <label name="correctAnswer">Correct Answer</label>
        <input name="correctAnswer" type="text" autocomplete="off">
      </div>

      <div class="wrongAnswer1">
        <label name="wrongAnswer1">Wrong Answer 1</label>
        <input name="wrongAnswer1" type="text" autocomplete="off">
      </div>

      <div class="wrongAnswer2">
        <label name="wrongAnswer2">Wrong Answer 2</label>
        <input name="wrongAnswer2" type="text" autocomplete="off">
      </div>

      <div class="theme">
        <label name="theme_id_fk">Theme</label>
        <select name="theme_id_fk" id="theme_id_fk">
          <% for ( let theme of themes ) { %>
          <option value="<%=theme.theme_id %>"><%=theme.theme_name %></option>
          <% } %>
        </select>
      </div>

      <div class="topic">
        <label name="topic_id_fk">Topic</label>
        <select name="topic_id_fk" id="topic_id_fk">
          <% for ( let topic of topics ) { %>
          <option value="<%=topic.topic_id %>"><%=topic.topic_name %></option>
          <% } %>
        </select>
      </div>

      <button class="buttonSubmit" type="submit">Create question</button>
    </form>
  </div>
</div>